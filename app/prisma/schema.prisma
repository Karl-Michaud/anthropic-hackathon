generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Scholarship {
  id                String             @id @unique @default(uuid())
  title             String // the title of the scholarship 
  description       String // the description of the scholarship
  prompt            String
  promptPersonality PromptPersonality?
  promptPriorities  PromptPriorities?
  promptValues      PromptValues?
  promptWeights     PromptWeights?
  generateDraft     GenerateDraft?

  @@map("scholarships")
}

enum ImportanceLevel {
  HIGH
  MEDIUM
  LOW
}

model PromptPersonality {
  id                    String   @id @default(cuid())
  spirit                String // what is the purpose of the scholarship? Why was it established? How can the essay be tailored to match the spirit of the scholarship?
  toneStyle             String   @map("tone_style") // be humourous, serious, and/or dramatic?
  valuesEmphasized      String[] @map("values_emphasized") // academic, service, etc
  recommendedEssayFocus String   @map("recommended_essay_focus") // what the essay should talk about (with regards to what the user has entered)

  scholarshipId String      @unique @map("scholarship_id")
  scholarship   Scholarship @relation(fields: [scholarshipId], references: [id])

  @@map("prompt_personalities")
}

model PromptPriorities {
  id              String       @id @default(cuid())
  primaryFocus    PrimaryFocus @map("primary_focus") // a list of possible focuses for the scholarship
  priorityWeights Json         @map("priority_weights") // Record<string, number>; matches each focus with a weight (percentage)

  scholarshipId String      @unique @map("scholarship_id")
  scholarship   Scholarship @relation(fields: [scholarshipId], references: [id])

  @@map("prompt_priorities")
}

enum PrimaryFocus {
  MERIT
  COMMUNITY
  INNOVATION
  LEADERSHIP
  ACADEMIC_EXCELLENCE
  EQUITY
  OTHER
}

model PromptValues {
  id               String   @id @default(cuid())
  valuesEmphasized String[] @map("values_emphasized") // the values that are especially emphasized in this prompt and/or scholarship
  valueDefinitions Json     @map("value_definitions") // Record<string, string>; match each value with an elaboration of what that value means, particularly with regards to the specifics of the scholarship
  evidencePhrases  String[] @map("evidence_phrases") // provide important phrases in the prompt and/or scholarship description that is relevant to the values of the scholarship

  scholarshipId String      @unique @map("scholarship_id")
  scholarship   Scholarship @relation(fields: [scholarshipId], references: [id])

  @@map("prompt_values")
}

model PromptWeights {
  id String @id @default(cuid())

  weights Json @map("weights")

  scholarshipId String      @unique @map("scholarship_id")
  scholarship   Scholarship @relation(fields: [scholarshipId], references: [id])

  @@map("prompt_weights")
}

model GenerateDraft {
  id    String @id @default(cuid())
  essay String

  scholarshipId String      @unique @map("scholarship_id")
  scholarship   Scholarship @relation(fields: [scholarshipId], references: [id])

  @@map("drafts")
}
